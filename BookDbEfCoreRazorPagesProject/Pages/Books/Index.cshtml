@page
@model BookDbEfCoreRazorPagesProject.Pages.Books.IndexModel
@{
    ViewData["Title"] = "Books";
}

<div class="container mt-4">
    <h1 class="mb-4">Books</h1>

    <div class="mb-3">
        <a asp-page="Create" class="btn btn-primary">Create New</a>
    </div>

    @if (Model.BookList?.Any() ?? false)
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.BookList)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Author</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-2">Edit</a>
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No books available. Click "Create New" to add one!
        </div>
    }
</div>